<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/home"
        android:layout_gravity="left|top"
        android:clickable="true"
        android:src="@drawable/home"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/gethard"
        android:layout_gravity="right|top"
        android:src="@drawable/gethard"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/itfollows"
        android:layout_gravity="left|center_vertical"
        android:src="@drawable/itfollows"
        android:layout_alignTop="@+id/home"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/cinderella"
        android:src="@drawable/cinderella"
        android:layout_alignTop="@+id/gethard"
        android:layout_alignLeft="@+id/itfollows"
        android:layout_alignStart="@+id/itfollows" />

</RelativeLayout>
